{
  "rewrites": [
    { 
      "source": "/((?!images|assets|robots.txt|sitemap.xml|favicon.ico|vite.svg).*)",
      "destination": "/index.html" 
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800, immutable"
        }
      ]
    }
  ]
}